{
  "manifest_version": 3,
  "name": "ChatGPT Tools",
  "version": "2.0",
  "description": "掌控您的 ChatGPT 對話。此擴充功能可讓您雙擊 Enter 鍵立即傳送訊息，而按一下 Enter 鍵則可換行，輕鬆格式化您的想法。告別誤發送！",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "sidePanel"],
  "action": {
    "default_icon": "assets/icons/GPT-pin.png",
    "default_title": "ChatGPT 工具"
  },
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["./src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "128": "/assets/icons/GPT-pin.png"
  }
}
