{
  "manifest_version": 3,
  "default_locale": "zh_TW",
  "version": "2.3.0",
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "options_ui": {
    "page": "src/settings/settings.html",
    "open_in_tab": true
  },
  "permissions": ["activeTab", "scripting", "storage", "tabs", "sidePanel"],
  "action": {
    "default_icon": "assets/logo/GPT-pin16.png",
    "default_title": "ChatGPT Bookmark"
  },
  "host_permissions": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"],
      "js": ["./src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "16": "/assets/logo/GPT-pin16.png",
    "48": "/assets/logo/GPT-pin48.png",
    "128": "/assets/logo/GPT-pin128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/bookmark-star.svg",
        "assets/icons/bookmark-star-fill.svg"
      ],
      "matches": ["https://chat.openai.com/*", "https://chatgpt.com/*"]
    }
  ]
}
