{
  "manifest_version": 3,
  "name": "ChatGPT Bookmark",
  "version": "2.0",
  "description": "ChatGPT 書籤 + 快捷傳送！訊息一鍵加書籤，側邊欄快速跳轉回顧內容。編輯訊息輸入時單擊 Enter 換行、快速雙擊送出，格式化思路不怕誤發送！",
  "permissions": ["activeTab", "scripting", "storage", "tabs", "sidePanel"],
  "action": {
    "default_icon": "assets/icons/GPT-pin.png",
    "default_title": "ChatGPT Bookmark"
  },
  "host_permissions": ["https://chatgpt.com/*"],
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["./src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "icons": {
    "128": "/assets/icons/GPT-pin.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icons/bookmark-star.svg",
        "assets/icons/bookmark-star-fill.svg"
      ],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}
